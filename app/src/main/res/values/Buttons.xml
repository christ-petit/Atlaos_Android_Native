<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Collect.Button.IconButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">?colorOnSecondary</item>
        <item name="backgroundTint">?colorSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconSize">32dp</item>
    </style>

    <style name="Widget.Collect.Button.OutlinedIconButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">?colorOnSurface</item>
        <item name="iconGravity">textStart</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconSize">32dp</item>
    </style>
    <style name="Widget.Collect.Button.Custom" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Widget.Collect.Button.WidgetAnswer" parent="Widget.Collect.Button.Custom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_extra_small</item>
    </style>

</resources>